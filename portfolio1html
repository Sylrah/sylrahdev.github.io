  <script>
    (function () {
      const slides = Array.from(document.querySelectorAll(".hero_slide"));
      const dots = Array.from(document.querySelectorAll(".hero_dot"));
      const btns = Array.from(document.querySelectorAll(".hero_nav-btn"));

      const labelEl = document.getElementById("hero-caption-label");
      const metaEl = document.getElementById("hero-caption-meta");
      const textEl = document.getElementById("hero-caption-text");
      const chipEl = document.getElementById("hero-project-chip-label");

      let current = 0;
      const SLIDE_INTERVAL = 8000; // 8ì´ˆ
      let timer = null;

      function updateCaption(index) {
        const slide = slides[index];
        const label = slide.getAttribute("data-label") || "";
        const meta = slide.getAttribute("data-meta") || "";
        const text = slide.getAttribute("data-text") || "";

        labelEl.textContent = label;
        metaEl.textContent = meta.toUpperCase();
        textEl.textContent = text;

        // ì¹© í…ìŠ¤íŠ¸ë„ ìŠ¬ë¼ì´ë“œì— ë”°ë¼ ë³€ê²½
        if (index === 0) {
          chipEl.textContent = "OBSCURA Â· Primary Focus";
        } else if (index === 1) {
          chipEl.textContent = "SPECULA Â· Luminous Chronicle";
        } else if (index === 2) {
          chipEl.textContent = "CUNABULA Â· Long-term RPG Plan";
        } else if (index === 3) {
          chipEl.textContent = "AURELLA Â· Future Concept";
        } else {
          chipEl.textContent = "Experimental Â· Prototype Works";
        }
      }

      function playActiveVideo(index) {
        slides.forEach((slide, i) => {
          const video = slide.querySelector("video");
          if (!video) return;

          if (i === index) {
            try {
              video.currentTime = 0;
              video.play().catch(() => {});
            } catch (e) {}
          } else {
            try {
              video.pause();
            } catch (e) {}
          }
        });
      }

      function goToSlide(index) {
      const total = slides.length;

      // ğŸ” ì¸ë±ìŠ¤ë¥¼ í•­ìƒ 0 ~ total-1 ì•ˆì—ì„œ ìˆœí™˜í•˜ê²Œ ë§Œë“¤ê¸°
      current = (index + total) % total;

      // ìŠ¬ë¼ì´ë“œ í‘œì‹œ/ìˆ¨ê¹€
      slides.forEach((slide, i) => {
        slide.classList.toggle("is-active", i === current);
      });

      // ë„íŠ¸(active í‘œì‹œ)
      dots.forEach((dot, i) => {
        dot.classList.toggle("is-active", i === current);
      });
      
      // â˜… ì—¬ê¸°ì„œ ìº¡ì…˜ë„ í˜„ì¬ ìŠ¬ë¼ì´ë“œ ê¸°ì¤€ìœ¼ë¡œ ê°±ì‹ 
      updateCaption(current);

      // í˜„ì¬ ìŠ¬ë¼ì´ë“œ ì˜ìƒ ì¬ìƒ ë¡œì§ì´ ìˆë‹¤ë©´ ì—¬ê¸°ì—
      if (typeof playActiveVideo === "function") {
        playActiveVideo(current);
      }
    }

      function nextSlide(step = 1) {
        const total = slides.length;                      // ìŠ¬ë¼ì´ë“œ ê°œìˆ˜
        const nextIndex = (current + step + total) % total;
        goToSlide(nextIndex);
      }

      function startAutoSlide() {
        clearInterval(timer);
        timer = setInterval(() => {
            nextSlide(1);
          }, SLIDE_INTERVAL);
      }

      // ì  í´ë¦­
      dots.forEach((dot) => {
        dot.addEventListener("click", () => {
          const target = parseInt(dot.getAttribute("data-target"), 10);
          goToSlide(target);
          startAutoSlide();      // â˜… í´ë¦­í•œ ì‹œì ë¶€í„° ë‹¤ì‹œ 8ì´ˆ ì¹´ìš´íŠ¸ ì‹œì‘
        });
      });

      // ì¢Œìš° ë²„íŠ¼
      btns.forEach((btn) => {
        btn.addEventListener("click", () => {
          const dir = btn.getAttribute("data-direction");
          nextSlide(dir === "next" ? 1 : -1);
          startAutoSlide();      // â˜… ìˆ˜ë™ ë„˜ê¸´ ìˆœê°„ë¶€í„° ë‹¤ì‹œ 8ì´ˆ ì¹´ìš´íŠ¸
        });
      });

      // ìµœì´ˆ ì„¸íŒ…
      updateCaption(current);
      playActiveVideo(current);
      startAutoSlide();
    })();

    // ===== ì„¹ì…˜ ìŠ¤í¬ë¡¤ì— ë”°ë¼ ë„¤ë¹„ í™œì„±í™” =====
    (() => {
      const sections = document.querySelectorAll(".page_section[id]");
      const navLinks = document.querySelectorAll(".nav_link");

      if (!sections.length || !navLinks.length) return;

      const observer = new IntersectionObserver(
        entries => {
          entries.forEach(entry => {
            if (!entry.isIntersecting) return;

            const id = entry.target.id;
            navLinks.forEach(link => {
              const match = link.getAttribute("href") === `#${id}`;
              link.classList.toggle("active", match);
            });
          });
        },
        {
          rootMargin: "-55% 0px -40% 0px", // í™”ë©´ ê°€ìš´ë°ì¯¤ ë“¤ì–´ì˜¤ë©´ ì„¹ì…˜ ì¸ì‹
          threshold: 0
        }
      );

      sections.forEach(sec => observer.observe(sec));
    })();

